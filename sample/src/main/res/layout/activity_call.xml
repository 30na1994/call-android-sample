<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activities.CallActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/caller_username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="top|center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/call_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/messaging_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/media_state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/mute_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_off_white_24dp" />

        <ImageButton
            android:id="@+id/accept_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/accept_button_background"
            android:src="@drawable/ic_call_white_24dp" />

        <ImageButton
            android:id="@+id/reject_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/hangup_button_background"
            android:src="@drawable/ic_call_end_white_24dp"
          />


        <ImageButton
            android:id="@+id/hangup_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/hangup_button_background"
            android:src="@drawable/ic_call_end_white_24dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/speaker_button"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginLeft="10dp"

            android:src="@drawable/ic_volume_up_white_24dp"
            android:background="@android:color/transparent" />


    </LinearLayout>

</LinearLayout>